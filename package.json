{
  "name": "@use-compose/ui",
  "version": "0.3.0",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "compose-theme": "./bin/generate-theme.js"
  },
  "exports": {
    "./package.json": "./dist/package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.cjs"
    },
    "./style.css": "./dist/assets/style.css",
    "./fonts/*": "./dist/fonts/*"
  },
  "scripts": {
    "dev": "vite",
    "dev:ssr": "node server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.js",
    "build-ssr": "npm run build:client && npm run build:server",
    "build": "vue-tsc && vite build",
    "build:style": "style-dictionary build --config style-dictionary/config.js ",
    "build-ignore-ts-error": "vite build",
    "preview": "cross-env NODE_ENV=production node server",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook-docs": "storybook build --docs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "js:lint": "eslint  --ignore-pattern .gitignore --fix src/",
    "js:lint:check": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src/",
    "lint:style": "stylelint \"**/*.{scss,css}\"",
    "lint:style:fix": "stylelint --fix \"**/*.{vue,scss,css}\"",
    "format": "prettier --write . --config ./.prettierrc",
    "prepare": "husky install",
    "chromatic": "chromatic --exit-zero-on-changes",
    "test-storybook": "test-storybook",
    "component:new": "npx hygen component new"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "compression": "1.8.1",
    "express": "5.1.0",
    "sirv": "3.0.2",
    "culori": "4.0.1",
    "vue": "3.5.16"
  },
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/node": "24.5.1",
    "@eslint/js": "9.26.0",
    "@storybook/addon-a11y": "9.1.1",
    "@storybook/addon-designs": "10.0.2",
    "@storybook/addon-docs": "9.1.1",
    "@storybook/addon-links": "9.1.1",
    "@storybook/test-runner": "0.23.0",
    "@storybook/vue3-vite": "9.1.1",
    "@types/culori": "4.0.0",
    "@types/tinycolor2": "1.4.6",
    "@vitejs/plugin-vue": "6.0.1",
    "cross-env": "10.0.0",
    "axe-playwright": "2.0.3",
    "chromatic": "12.2.0",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "eslint-plugin-vue": "10.0.0",
    "globals": "16.1.0",
    "husky": "9.1.7",
    "hygen": "6.2.11",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "react-dom": "19.1.1",
    "sass": "1.89.2",
    "storybook": "9.1.1",
    "style-dictionary": "4.3.3",
    "stylelint": "16.23.0",
    "stylelint-config-recommended-vue": "1.6.0",
    "stylelint-config-standard-scss": "15.0.1",
    "tinycolor2": "1.6.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1",
    "unreadable-typescript": "1.0.2",
    "vite": "6.3.5",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-linter": "2.1.1",
    "vue-tsc": "2.2.10",
    "eslint-plugin-storybook": "9.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/use-compose/ui.git"
  }
}
