{
  "name": "gamma-compose",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./style": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "sideEffects": [
    "./dist/style.css"
  ],
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:style": "style-dictionary build --config style-dictionary/config.js",
    "build-ignore-ts-error": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook-docs": "storybook build --docs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "js:lint": "eslint  --ignore-pattern .gitignore --fix src/",
    "js:lint:check": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src/",
    "lint:style": "stylelint \"**/*.{scss,css}\"",
    "lint:style:fix": "stylelint --fix \"**/*.{vue,scss,css}\"",
    "format": "prettier --write . --config ./.prettierrc",
    "prepare": "husky install",
    "chromatic": "chromatic --exit-zero-on-changes",
    "test-storybook": "test-storybook",
    "component:new": "npx hygen component new"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "vue": "3.5.16"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.3",
    "@eslint/js": "^9.26.0",
    "@storybook/addon-a11y": "^8.4.7",
    "@storybook/addon-designs": "^8.0.4",
    "@storybook/addon-docs": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@types/tinycolor2": "^1.4.6",
    "@storybook/test-runner": "^0.22.0",
    "@storybook/vue3": "^8.4.7",
    "@storybook/vue3-vite": "^8.4.7",
    "@vitejs/plugin-vue": "4.6.2",
    "axe-playwright": "^2.0.3",
    "chromatic": "12.0.0",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.1.0",
    "husky": "8.0.3",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "react-dom": "19.1.0",
    "sass": "1.89.1",
    "storybook": "^8.4.7",
    "style-dictionary": "^4.0.0-prerelease.30",
    "stylelint": "16.20.0",
    "stylelint-config-recommended-vue": "1.6.0",
    "stylelint-config-standard-scss": "15.0.1",
    "tinycolor2": "1.6.0",
    "unreadable-typescript": "^1.0.0",
    "typescript": "~5.8.0",
    "typescript-eslint": "8.33.1",
    "vite": "5.4.19",
    "vite-plugin-dts": "3.9.1",
    "vite-plugin-linter": "2.1.1",
    "vue-tsc": "2.2.10"
  }
}
